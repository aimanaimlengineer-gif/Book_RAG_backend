# =============================================================================
# AGENTIC RAG BOOK GENERATOR - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Agentic RAG Book Generator"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
WORKERS=1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# Groq API Key (Primary LLM Provider - REQUIRED)
GROQ_API_KEY=

# OpenAI API Key (Fallback LLM Provider - RECOMMENDED)
# OPENAI_API_KEY=your_openai_api_key_here

# Stability AI API Key (For Image Generation - OPTIONAL)
# STABILITY_API_KEY=your_stability_api_key_here

# Pinecone API Key (For Vector Database - OPTIONAL)
# PINECONE_API_KEY=your_pinecone_api_key_here

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
GROQ_MODEL=llama-3.1-8b-instant
DEFAULT_LLM_PROVIDER=groq
LOCAL_LLM_ENABLED=true
OLLAMA_BASE_URL=http://ollama:11434

# =============================================================================
# DATABASE CONFIGURATION (SQLite3)
# =============================================================================
# SQLite3 Database URL (REQUIRED)
DATABASE_URL=sqlite:///./data/agentic_rag.db

# Async Database URL (Optional - defaults to DATABASE_URL)
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./data/agentic_rag.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
VECTOR_DB_PROVIDER=faiss
FAISS_INDEX_PATH=./data/faiss_index
VECTOR_DIMENSION=384

# =============================================================================
# EMBEDDINGS CONFIGURATION
# =============================================================================
EMBEDDING_PROVIDER=sentence_transformers
SENTENCE_TRANSFORMERS_MODEL=all-MiniLM-L6-v2

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# WEB SCRAPING CONFIGURATION
# =============================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY=1.0
USER_AGENT=AgenticRAG-BookGenerator/1.0

# =============================================================================
# OUTPUT PATHS
# =============================================================================
OUTPUT_PATH=./outputs
TEMP_PATH=./temp
UPLOAD_PATH=./uploads

# =============================================================================
# BOOK GENERATION DEFAULTS
# =============================================================================
DEFAULT_CHAPTER_LENGTH=2500
MAX_CHAPTERS=20
MIN_QUALITY_SCORE=0.8
MAX_CONCURRENT_AGENTS=5

# =============================================================================
# SUPPORTED OUTPUT FORMATS
# =============================================================================
SUPPORTED_FORMATS=["pdf", "epub", "html", "docx"]

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
